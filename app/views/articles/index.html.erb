<div class="container py-4">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="mb-0">Articles</h1>
    <%= link_to raw('<i class="fa fa-plus"></i> New Article'), new_article_path, class: "btn btn-primary" %>
  </div>

  <div class="list-group">
    <% @articles.each do |article| %>
      <a class="list-group-item list-group-item-action" href="<%= article_path(article) %>">
        <h3 class="mb-1"><%= article.title %></h3>
        <p class="text-muted"><%= article.created_at %></p>
        <p class="mb-1 mt-2 text-truncate"><%= article.content %></p>
      </a>
    <% end %>
  </div>
</div>
